.swiper {
    height: 400rpx;
    width: 600rpx;
}

.item {
    height: 400rpx;
    width: 600rpx;
}

.item-image1 {
    position: relative;
    align-items: center;
    justify-content: center;
    background-color: #1AAD19;
    color: #FFFFFF;
    font-size: 36rpx;
}

.item-image1:before {
    content: "A";
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}

