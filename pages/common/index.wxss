.index-hd {
    padding: 80rpx;
    text-align: center;
}

.index-bd {
    padding: 0 30rpx 40rpx;
}

.list-item {
    margin: 20rpx 0;
    background-color: white;
    border-radius: 5rpx;
    padding: 20rpx 10rpx;
}

.list-item-line {
    margin: 0 30rpx;
    height: 1px;
    border-top: 1rpx solid #D8D8D8;
    color: #D8D8D8;
}

.navigator {
    padding: 20rpx 30rpx;
    position: relative;
    display: flex;
    align-items: center;
}

.navigator-text {
    flex: 1;
}

.navigator-arrow {
    padding-right: 26rpx;
    position: relative;
}

.navigator-arrow:after {
    content: " ";
    display: inline-block;
    height: 18rpx;
    width: 18rpx;
    border-width: 2rpx 2rpx 0 0;
    border-color: #888888;
    border-style: solid;
    transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    position: absolute;
    top: 50%;
    margin-top: -8rpx;
    right: 28rpx;
}