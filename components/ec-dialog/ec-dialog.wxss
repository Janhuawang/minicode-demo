/**ec-dialog.wxss - 弹窗的**/
.zan-dialog {
    visibility: hidden;
    width: 100%;
    height: 100%;
}

.zan-dialog-show {
    visibility: visible;
    position: absolute;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background: rgba(0, 0, 0, .3);
}

.zan-dialog-container {
    position: absolute;
    top: 50%;
    transform: translate(0, -50%);
    width: 100%;
    height: auto;
    display: flex;
    flex-direction: column;
}

ec-canvas {
    width: 100%;
    height: 100%;
}